# This file is for unifying the coding style for different editors and IDEs
# See editorconfig.org

root = true

[*]
charset = utf-8

[*.java]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.xml]
indent_style = tab
indent_size = 4

[{*.json, *.yml}]
indent_style = space
indent_size = 2
